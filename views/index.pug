    title Homepage
    style.
      body {
        margin: 0;
        padding: 0;
        overflow: hidden;
        font-family: Arial, sans-serif;
      }
      .banner {
        width: 100%;
        height: 25vh; 
        background-color: #000000;
        color: white;
        display: flex;
